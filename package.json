{
  "name": "h2eaux-gestion",
  "version": "1.0.0",
  "description": "Application PWA professionnelle pour la gestion de plomberie, climatisation et chauffage avec Plan 2D MagicPlan",
  "main": "frontend/index.html",
  "scripts": {
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && uvicorn server:app --host 0.0.0.0 --port 8001 --reload",
    "frontend": "cd frontend && python3 -m http.server 3000",
    "build": "echo 'Building H2EAUX GESTION PWA...' && npm run optimize",
    "optimize": "node deployment/optimize-assets.js",
    "deploy": "bash deployment/deploy-ovh.sh",
    "test": "npm run test:backend",
    "test:backend": "cd backend && python -m pytest tests/ -v",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d"
  },
  "keywords": [
    "pwa",
    "plomberie",
    "climatisation",
    "chauffage",
    "plan-2d",
    "magicplan",
    "gestion",
    "professionnel"
  ],
  "author": "H2EAUX GESTION",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/votre-username/h2eaux-gestion.git"
  },
  "bugs": {
    "url": "https://github.com/votre-username/h2eaux-gestion/issues"
  },
  "homepage": "https://github.com/votre-username/h2eaux-gestion#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "python": ">=3.11.0"
  },
  "browserslist": [
    "Chrome >= 80",
    "Safari >= 13",
    "Firefox >= 75",
    "Edge >= 80"
  ]
}